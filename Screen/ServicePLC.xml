            <code xmlns="http://www.w3.org/1999/xhtml">//Write the C Code function body here.
//You have access to everything defined in any of the available header files listed under the PLC Units node in the Project Manager

int* times[8][2] = 
  {{&amp;Time0, Height0},
   {&amp;Time1, Height1},
   {&amp;Time2, Height2},
   {&amp;Time3, Height3},
   {&amp;Time4, Height4},
   {&amp;Time5, Height5},
   {&amp;Time6, Height6},
   {&amp;Time7, Height7}};

//search algortihm based on time

unsigned int* colors[8] = {Color0, Color1, Color2, Color3, Color4, Color5, Color6, Color7};
int warnings[8]= {Warning0, Warning1, Warning2, Warning3, Warning4, Warning5, Warning6, Warning7};
 
for(int i = 0; i &lt; 8; i++){
  *times[i][1] = 75 + 50 * i;
  if(warnings[i] == 1){
    *colors[i] = 0xFF000000;
  }
  else{
    *colors[i] = 0x00000000;  
  }
}


 </code>
